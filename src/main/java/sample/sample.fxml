            <AnchorPane layoutY="523.0" prefHeight="76.0" prefWidth="800.0" style="-fx-background-color: #DDDDDD;" />
            <MenuBar layoutY="1.0">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#openAndShowImage" text="Open Image" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <AnchorPane fx:id="imagePane" layoutY="26.0" prefHeight="500.0" prefWidth="800.0" />
         </children>
      </AnchorPane>
